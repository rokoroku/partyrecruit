<% provide(:title, @user.name) %>
<div class="container">
  <div class="row" style="margin-bottom: 20px">
    <h2>
      <%= gravatar_for @user , style:"margin: 0 10px 10px 10px !important;" %>
      <%= @user.name %>
    </h2>
    <%= link_to 'Edit', edit_user_path(@user) %> | <%= link_to 'Back', users_path %>
  </div>
  <div>
    <dl>
      <dt>Email</dt>
      <dd><%= @user.email %></dd>
      <dt>Joined Date</dt>
      <dd><%= @user.created_at %></dd>
      <dt>Parties</dt>
      <dd><%= @user.parties.length %></dd>
      <dt>Microposts</dt>
      <dd><%= @user.microposts.length %></dd>
    </dl>
  </div>
  <br>

</div>