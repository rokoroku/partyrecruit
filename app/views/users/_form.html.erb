<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="formarea">
      <div class="span6 offset3">

        <p>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'input-lg' %>
        </p>

        <p>
          <%= f.label :email %>
          <%= f.text_field :email, class: 'input-lg' %>
        </p>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'input-lg' %>
        </p>

        <p>
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'input-lg' %>
        </p>

        <br>

        <p>
          <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
        </p>

      </div>
    </div>
<% end %>