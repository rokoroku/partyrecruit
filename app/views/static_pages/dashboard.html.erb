<% provide(:title, 'Home') %>
<div class="container" style="margin-top:20px;">
  <div clas="row">
    <div class="col-sm-3">
      <%= render 'shared/user_info_block' %>
      <%= render 'shared/party_list_block' %>
    </div>

    <div class="col-sm-9">

      <div class="mybox">
        <h3>Dashboard</h3>

        <div class="message_board">
          <% @parties.each do |party| %>
              <!--<hr>-->
              <h3><%= link_to party.name, party %></h3>
              <% if party.microposts.length > 0 %>
                  <% micropost = party.microposts.first %>
                  <% @user = User.find(micropost.user_id) %>
                  <% if !@user.nil? %>
                      <div class="media">
                        <a class="pull-left" href="#">
                          <%= gravatar_for @user, size: 48 %>
                          <!--<img class="media-object" style="width: 64px; height: 64px;" alt="64x64" src="data:image/svg+xml;base64," data-src="holder.js/64x64">-->
                        </a>

                        <div class="media-body">
                          <h4 class="media-heading"><%= link_to @user.name, @user %></h4>
                          <%= micropost.content.gsub(/\n\r/, "<br />") %>

                          <span class="pull-right" style="margin-top: 10px">
                            <% if micropost.created_at.today? %>
                                <%= micropost.created_at.strftime("%H:%M") %>
                            <% else %>
                                <%= micropost.created_at.strftime("%F") %>
                            <% end %>
                          </span>
                        </div>
                      </div>
                  <% end %>
              <% else %>
                  <div class="media-body" style="padding-left: 24px; margin-bottom: 24px">
                    등록된 게시글이 없습니다.
                  </div>
              <% end %>
          <% end %>
        </div>


      </div>

    </div>
  </div>
</div>
