<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>

<!--Navbar 헤더-->
<%= render 'layouts/header' %>

<!--Bootstrap Alert-->
<div class="container" style="position: absolute; z-index: 10; left: 0; right: 0;">
  <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="margin-right: 24px">&times;</button>
          <%= value %>
          <% flash.discard(key) %>
      <% end %>
      <script type="text/javascript">
          window.setTimeout(function () { var flash = $(".alert");
              flash.fadeOut(1000, function () { flash.remove();});
          }, 3000);
      </script>
  <% end %>
</div>

<!--본문 영역-->
<%= yield %>

<hr>

<!--Footer-->
<%= render 'layouts/footer' %>

</body>
</html>

