<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <header>
        <%= link_to t('app_title'), root_path, class: "navbar-brand", id: "logo" %>
      </header>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">

      <% if controller_name != 'sessions' %>
          <% if !signed_in? %>
              <%= form_for(:session, url: sessions_path, :html => {:class => "navbar-form navbar-right"}) do |f| %>
                  <div class="form-group">
                    <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Sign in", class: "btn btn-success" %>
                  </div>
              <% end %>
          <% else %>
              <ul class="nav navbar-nav">
                <li id="menu1"><%= link_to "내 파티", root_path %></li>
                <li id="menu2"><%= link_to "둘러보기", parties_path %></li>
                <li id="menu3"><%= link_to "모집하기", new_party_path %></li>
                <!--<#% if controller_name=='static_pages' %>-->
                    <!--<%#= content_for :li, %>-->
                <!--<#% end %>-->
              </ul>

              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">계정 <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "내 정보", current_user %></li>
                    <li><%= link_to "로그아웃", signout_path, method: :delete %></li>
                    <li class="divider"></li>
                    <li><%= link_to "About", about_path %></li>
                  </ul>
                </li>
              </ul>


              <form class="navbar-form navbar-right hidden-sm" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn hidden">Submit</button>
              </form>


          <% end %>
      <% end %>

    </div>
    <!--/.navbar-collapse -->
  </div>
</div>