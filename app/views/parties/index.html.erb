    //            {"id": 21, "name": "ggg", "description": "g", "user_limit": 2, "location_longitude": 127.035, "location_latitude": 37.2806, "recruiting": null, "created_at": "2014-05-30T02:28:06.000Z", "updated_at": "2014-05-30T02:28:06.000Z"},
